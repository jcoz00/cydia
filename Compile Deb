#!/bin/bash

echo Copyright 2017 By James Cozzi \(jcoz00\)
echo Please Put The Path To  Your Uncompiled Folder…
read uncompiledPath
echo Removing .DSStore Files…
cd $uncompiledPath && find . -name '*.DS_Store' -type f -delete && cd ../
echo Please Supply a Name For your Deb…
read debName
echo Compiling Folder to Deb…
dpkg-deb -Zgzip -b $uncompiledPath $debName.deb
echo Done!